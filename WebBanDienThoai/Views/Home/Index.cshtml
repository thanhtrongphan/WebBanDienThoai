@model List<WebBanDienThoai.Models.PRODUCT>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Danh sách sản phẩm</h1>
<div class="row">
    
    @foreach (var item in Model)
    {
        <div class="col-md-3 col-sm-6">
            <a href="@Url.Action("xemchitiet", new {@Masp=item.ID })">
                <img src=@Url.Content("~/Images/"+ item.Picture) class="img-responsive" alt="" width="400" height="400" />
            </a>
            <center>
                <h3>@item.Name</h3>
                <h3 style="color:red">Giá: @String.Format("{0:0,0}", @item.Price) VND</h3>
                <br />
                @using (Html.BeginForm("AddCart", "Cart", new { @id = item.ID }))
                {
                    <input type="submit" value="Mua hàng" id="bgnGioHang" />

                }
                @*<a href="@Url.Action("xemchitiet", new {@Masp=item.Masp })">Xem chi tiết</a>*@
            </center>

        </div>
    }
</div>
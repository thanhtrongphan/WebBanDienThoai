<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style type="text/css">
        .giohang {
            color: red;
            font-size: large
        }
    </style>
</head>
<body>
    @{ var u = Session["use"] as WebBanDienThoai.Models.Account; }
    <div class="navbar navbar-inverse navbar-fixed-top">

        <div class="top_header col-md-12">

            <div class="row">





                @{ if (u != null)
                    {
                        <div class="col-sm-4 col-md-0" style="padding-left:250px">
                            @Html.Action("CartPartial", "Cart")
                        </div>
                        <div class="col-sm-4 col-md-0">
                            <a style="color:red" href="@Url.Action("Profile", "User", new { id = u.NAME })"> Xin chào : @u.EMAIL</a>

                            <a style="color:red" href="/User/Logout"> ĐĂNG XUẤT</a>
                        </div>
                    }
                    else
                    {
                        <div class="col-sm-4 col-md-0">
                            <a href="/User/Dangky"> Đăng ký</a>
                            &nbsp;
                            <a href="~/User/Login"> Đăng nhập</a>
                        </div>
                    }
                }
            </div>

            </div>
        </div>

        @RenderBody()


        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>

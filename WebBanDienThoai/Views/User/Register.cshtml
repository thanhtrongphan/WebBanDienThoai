@model WebBanDienThoai.Models.Account
@{
    ViewBag.Title = "Register";
    Layout = null;
}
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<h2>Đăng ký tài khoản</h2>
<h3>@ViewBag.isreg</h3>
@using (Html.BeginForm("Register", "User", new { @class = "" }))

@model WebBanDienThoai.Models.BILL

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chi tiết đơn hàng</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Account.NAME)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Account.NAME)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateBuy)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateBuy)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.Tinhtrang)*@
            Tình trạng đơn hàng
        </dt>

        <dd>
            @{
                if (Model.Status == 0)
                {
                    <div style="color:red">Đang chờ xác nhận</div>
                }
                else if (Model.Status == 1)
                {


                    <div style="color:slateblue">Đã xác nhận</div>

                }
                else
                {
                    <div style="color:red">Đang chờ xác nhận</div>

                }
            }
        </dd>

        

        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

    </dl>
</div>
<p>
    <button> @Html.ActionLink("Xác nhận đơn hàng", "Confirm", new { id = Model.ID }) </button>
</p>


















